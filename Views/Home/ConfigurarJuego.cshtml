@{
    ViewData["Title"] = "Home Page";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
<section class="text-center">
    <h1 id="conf">Configuracion</h1>

<form action='@Url.Action("Comenzar")'>
<section class="btn-group-dif-cat p-3">
<input class="circle name" name="username" type="text" placeholder="Ingrese su nombre" data-bs-toggle="dropdown" aria-expanded="false" required>
</section>

<main class="btn-group p-3">
<select class="round left" name="categoria" type="button" data-bs-toggle="dropdown" aria-expanded="false">
<option value="" disabled selected hidden>Seleccione una categoria</option>
<option value="-1">  Todas las categorias </option>
@foreach(Categoria item in ViewBag.Categorias){
    <option value="@item.idCategoria">  @item.Nombre </option>
}
</select> </main>

<main class="btn-group p-3">
<select class="round right" name="dificultad"  type="button" data-bs-toggle="dropdown" aria-expanded="false">
<option value="" disabled selected hidden>Seleccione una dificultad</option>
<option value="-1">  Todas las dificultades </option>
@foreach(Dificultad item in ViewBag.Dificultad){
    <option value="@item.idDificultad">  @item.Nombre </option>
}
</select></main>

<article class="dif-cat p-3">
    <input class="circle green" type="submit" value="Submit"/>
</article>
</form>







